{% extends 'admin/base.html.twig' %}

{% block title %}Edit Tag{% endblock %}

{% block body %}
    <h1 class="text-3xl mb-4">Edit Tag</h1>

    <div class="flex">
        <div class="w-full bg-white shadow-sm p-4">
            <form class="w-full" action="{{ url('tag_edit', {id:tag.id}) }}" method="POST">
                <input type="hidden" name="tag[_token]" value="{{ form._token.vars.value }}"/>
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="tagTitle">
                            Title
                        </label>
                        <input name="tag[title]" value="{{ tag.title }}"
                               class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="tagTitle" type="text" placeholder="Enter tag title">
                        {% if form.title.vars.errors|length %}
                            <p class="text-red-500 text-xs italic">{{ form.title.vars.errors }}</p>
                        {% endif %}
                    </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="tagSlug">
                            Slug
                        </label>
                        <input name="tag[slug]" value="{{ tag.slug }}"
                               class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="tagSlug" type="text" placeholder="Enter tag slug">
                        {% if form.slug.vars.errors|length %}
                            <p class="text-red-500 text-xs italic">{{ form.slug.vars.errors }}</p>
                        {% endif %}
                    </div>
                </div>

                <div class="text-right">
                    <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-600 border-teal-500 hover:border-teal-600 text-sm border-4 text-white py-1 px-2 rounded" type="submit">Edit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
