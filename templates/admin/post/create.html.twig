{% extends 'admin/base.html.twig' %}

{% block title %}New Post{% endblock %}

{% block body %}
    <h1 class="text-3xl mb-4">New Post</h1>

    <div class="flex">
        <div class="w-full bg-white shadow-sm p-4">
            <form class="w-full" action="{{ url('post_store') }}" method="POST">

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="postTitle">
                            Title
                        </label>
                        <input name="post[title]"
                               class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="postTitle" type="text" placeholder="Enter post title">
                    </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="tagSlug">
                            Slug
                        </label>
                        <input name="post[body]"
                               class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="tagSlug" type="text" placeholder="Enter tag slug">

                    </div>
                </div>


                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="tagDescription">
                            Description
                        </label>
                        <input name="post[description]"
                               class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="tagDescription" type="text" placeholder="Enter description">

                    </div>
                </div>

                <div class="text-right">
                    <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-600 border-teal-500 hover:border-teal-600 text-sm border-4 text-white py-1 px-2 rounded" type="submit" name="action" value="store">Store</button>
                    <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-600 border-teal-500 hover:border-teal-600 text-sm border-4 text-white py-1 px-2 rounded" type="submit" name="action" value="publish">Store & Publish</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
